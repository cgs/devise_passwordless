<h2>Login</h2>

<%= form_for(resource, :as => resource_name, :url => passwordless_path(resource_name), :html => { :method => :post }) do |f| %>
  <%= devise_error_messages! %>

  <div><%= f.label :email %><br />
  <%= f.email_field :email, :autofocus => true %></div>

  <div><%= f.submit "Send login link" %></div>
<% end %>
